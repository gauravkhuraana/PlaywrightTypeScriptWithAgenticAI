# ============================================
# Playwright Test Automation - Environment Config
# ============================================
# Copy this file to .env and update values for your environment.

# ── Core Configuration ──────────────────────
BASE_URL=https://example.com
API_BASE_URL=https://httpbin.org
TEST_ENV=staging                  # dev | staging | production

# ── CI/CD ───────────────────────────────────
CI=false

# ── Browser Options ─────────────────────────
HEADED=false                      # Run browsers in headed mode
SLOW_MO=0                        # Slow down actions by N ms

# ── Debugging ───────────────────────────────
DEBUG=                            # e.g. pw:api* for Playwright API logs
LOG_TO_FILE=false                 # Write logs to test-results/logs/

# ── Reporting ───────────────────────────────
ENABLE_NOTIFICATIONS=false
SLACK_WEBHOOK_URL=
TEAMS_WEBHOOK_URL=
EMAIL_ENABLED=false

# ── Application Under Test ──────────────────
START_SERVER=false                # Start local dev server before tests
TEST_USERNAME=
TEST_PASSWORD=
